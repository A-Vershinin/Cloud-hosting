{
  "extends": "airbnb-base",
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "globals": {
    "$": true,
    "jQuery": true
  },
  "rules": {
    "no-debugger": 0,
    "no-console": 0,
    "no-alert": 0,
    "no-tabs": 0,
    "no-var": 0,
    "no-undef": 1,
    "no-shadow": 0,
    "one-var": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-unused-vars": 1,
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "ignore",
        "named": "ignore",
        "asyncArrow": "ignore"
      }
    ],
    "func-names": 1,
    "quotes": [
      "error",
      "double"
    ],
    "indent": 0,
    "prefer-template": 1,
    "semi": [
      1,
      "always"
    ],
    "no-use-before-define": [
      1,
      {
        "functions": false,
        "classes": true
      }
    ],
    "prefer-arrow-callback": [
      1,
      {
        "allowNamedFunctions": false,
        "allowUnboundThis": false
      }
    ]
  }
}
