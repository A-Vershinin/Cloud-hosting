mixin head(data)
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
  meta(content="IE=edge" http-equiv="X-UA-Compatible")
  meta(name="format-detection" content="telephone=no")
  meta(name="theme-color" content="#2c3039")
  title= data.title
  meta(name="author" content = data.author)
  meta(name="description" content = data.description)
  meta(name="keywords" content="keywords")

  // favicon block start
  link(rel="shortcut icon", href="favicons/favicon.ico", type="image/x-icon")
  link(rel="icon", href="favicons/favicon-16x16.png", sizes="16x16")
  link(rel="icon", href="favicons/favicon-32x32.png", sizes="32x32")
  link(rel="icon", href="favicons/favicon-96x96.png", sizes="96x96")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-60x60.png", sizes="60x60")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-76x76.png", sizes="76x76")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-114x114.png", sizes="114x114")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-144x144.png", sizes="144x144")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-152x152.png", sizes="152x152")
  link(rel="apple-touch-icon", href="favicons/apple-touch-icon-180x180.png", sizes="180x180")
  link(rel="manifest", href="favicons/manifest.json")
  meta(name="theme-color", content="#ffffff")
  // favicon block end

  // block where we need download sources for first viewport. Critical sources.
  link(rel='preload' href='fonts/Roboto/RobotoBold/roboto-bold.woff2' as='font')
  link(rel='preload' href='fonts/Roboto/RobotoLight/roboto-light.woff2' as='font')
  link(rel='preload' href='fonts/PTsans/pt-sans-bold/pt-sans-bold.woff2' as='font')
  link(rel='preload' href='img/bg/header.jpg' as='image')

  link(rel='stylesheet' href='css/bundle.css')
  link(rel='stylesheet' href='css/app.css')
  script(src='https://cdn.polyfill.io/v2/polyfill.min.js' acync)

