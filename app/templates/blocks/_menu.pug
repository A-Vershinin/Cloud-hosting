nav.menu#js-menu
  button(type="button" aria-label="Menu" aria-controls="navigation").hamburger.menu__hamburger.hamburger--collapse
    span.visually-hidden Открыть меню
    span.hamburger-box
      span.hamburger-inner
  ul.menu__list
    - var items = ["Hosting", "Domains", "Features", "Testimonials", "Contacts"]
    each menu in items
      if menu == "Hot Deals"
        li.menu__item
          a(href="#").menu__link.menu__link--active=menu
      else
        li.menu__item
          a(href="#").menu__link=menu
