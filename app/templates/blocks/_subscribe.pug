.subscribe
  .container.subscribe__container
    .subscribe__title.visually-hidden Subscribe section
    .subscribe__follow
      h4.subscribe__follow-title Follow us on
      .socials.subscribe__social
        a(href="#").socials__item.socials__item--tw Twitter
        a(href="#").socials__item.socials__item--fb Facebook
        a(href="#").socials__item.socials__item--lk Linkedin
        a(href="#").socials__item.socials__item--inst Instagram
    .subscribe__form-wrapper
      label(for="subscribe__form").subscribe__form-title Subscribe
      form(action="#" method="POST", name="subscribe-search-from").search.subscribe__form#subscribe__form
        label(for="subscribe__email").visually-hidden Подписаться
        input(type="text" name="subscribe-email",
          placeholder="Enter your e-mail here").search__input.subscribe__input#subscribe__email
        button(type="submit").search__btn.subscribe__btn Send
